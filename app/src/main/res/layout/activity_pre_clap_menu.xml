<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PreClapMenu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/background_img"
            android:clipToPadding="false"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="16dp"
                android:clipToPadding="false"
                android:background="@drawable/custom_menu_box">

                <TextView
                    android:id="@+id/singleplayer_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Co chcesz sprawdzić?"
                    android:textAllCaps="false"
                    android:textColor="@color/native_dark_red"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/singleplayer_header"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/speed_btn"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="Szybkość"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/force_btn"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="Siła"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/quality_btn"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="Jakość"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/quantity_btn"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="Ilość"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reflex_btn"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="Czas&#10;reakcji"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/opera_seats" />

</RelativeLayout>