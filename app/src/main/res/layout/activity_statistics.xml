<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Statistics">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/background_img"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_menu_box"
            android:clipToPadding="false"
            android:padding="16dp">

            <TextView
                android:id="@+id/stats_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Statystyki"
                android:textAllCaps="false"
                android:textColor="@color/native_dark_red"
                android:textSize="28dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/first_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stats_header"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/avg_speed_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/avg_speed_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Średnia&#10;szybkość"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/avg_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avg_speed_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="200/min"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/max_speed_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/max_speed_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Najwyższa&#10;szybkość"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/max_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/max_speed_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="240/min"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_row_layout"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/avg_force_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/avg_force_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Średnia&#10;siła"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/avg_force"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avg_force_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="70N"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/max_force_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/max_force_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Największa&#10;siła"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/max_force"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/max_force_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="120N"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_row_layout"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/avg_quality_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/quality_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Średnia&#10;jakość"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/quality_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="75%"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/max_quality_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/max_quality_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Najwyższa&#10;jakość"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/max_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/max_quality_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="97%"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_row_layout"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/avg_quantity_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/avg_quantity_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Średnia&#10;ilość"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/avg_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avg_quantity_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/max_quantity_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/max_quantity_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Największa&#10;ilość"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/max_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/max_quantity_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="85"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifth_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fourth_row_layout"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/avg_reflex_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/avg_reflex_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Średni&#10;czas reakcji"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/avg_reflex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avg_reflex_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="250ms"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/max_reflex_stats_layout"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:clipToPadding="false"
                    android:elevation="5dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/max_reflex_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Najlepszy&#10;czas reakcji"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/max_reflex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/max_reflex_txt"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="170ms"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/opera_seats" />

</RelativeLayout>