<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_menu_box"
        android:layout_marginBottom="4dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/ranking_position"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/native_dark_red"
            android:textSize="38dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ranking_position"
            android:text="Użytkownik: "
            android:textColor="@color/native_dark_red"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/username_txt"
            android:gravity="end"
            android:text="Lukasz123"
            android:textColor="@color/native_dark_red"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parameter_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_txt"
            android:layout_alignBottom="@+id/ranking_position"
            android:layout_toEndOf="@id/ranking_position"
            android:gravity="center"
            android:text="Średnia szybkość: "
            android:textColor="@color/native_dark_red"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/parameter_txt"
            android:layout_alignEnd="@+id/username"
            android:layout_alignBottom="@+id/ranking_position"
            android:gravity="center_vertical"
            android:text="215/min"
            android:textColor="@color/native_dark_red"
            android:textSize="14dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>